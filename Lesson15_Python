Задание №3.
class car:
    
    def __init__(self, color, mark, body, transmission_type):
        self.color = color
        self.mark = mark
        self.body = body
        self.speed = 0
        self.transmission_type = transmission_type
    
    def start(self):
        print('speed = 10 km/h')
        self.speed = 10

    def stop(self):
        print('speed = 0 km/h')
        self.speed = 0
    
    def turn_right(self):
        print('машина повернула направо')
    
    def turn_left(self):
        print('машина повернула налево')
    
    def beep(self):
        print('BEEEEEEP')
     
    def speed_up(self, i=1):
        print(f'speed = {self.speed + i} km/h')
        self.speed += 2 * i
        
    def speed_down(self, i=1):
        if self.speed == 0:
            print('speed = 0 km/h')
        else:
            print(f'speed = {self.speed - i} km/h')
            self.speed -= i

toyota = car('blue', 'hat', 'sedan', 'auto')

mercedes = car( 'black', 'mercedes', 'sedan', 'auto')

mercedes.start()
mercedes.speed_up()
mercedes.speed_down()
mercedes.turn_left()
mercedes.speed_up()
mercedes.beep()
mercedes.turn_right()
mercedes.stop()

toyota.start()
toyota.speed_up()
toyota.speed_down()
toyota.turn_left()
toyota.speed_up()
toyota.beep()
toyota.turn_right()
toyota.stop()

Задание №4.
class car:
    
    def __init__(self, color, mark, body, transmission_type):
        self.max_speed_car = 80
        self.max_speed_truck = 60
        self.color = color
        self.mark = mark
        self.body = body
        self.speed = 0
        self.transmission_type = transmission_type
    
    def start(self):
        print('speed = 10 km/h')
        self.speed = 10

    def stop(self):
        print('speed = 0 km/h')
        self.speed = 0
    
    def turn_right(self):
        print('машина повернула направо')
    
    def turn_left(self):
        print('машина повернула налево')
