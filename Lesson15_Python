Задание №1.
class cat:
    
 def __init__(self, name, age, color):
     self.name = name
     self.age = age
     self.color = color
 def info(self):
     print(f'name:{self.name}, age:{self.age}, color:{self.color}')
    
 def miyyyy(self):
     print('miyyyy')
    
 def myyyyr(self):
     print('myyyyr')
    
 def I_want_to_eat(self):
     print('I_want_to_eat')
    
cat = cat(input(), input(), input())
cat.info()
cat.miyyyy()
cat.myyyyr()
cat.I_want_to_eat()

